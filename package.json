{
  "private": true,
  "packageManager": "pnpm@6.32.3",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "start": "pnpm -C packages/main-react start & pnpm -C packages/micro-vue serve & pnpm -C packages/micro-react start",
    "cz": "git-cz",
    "format": "prettier --write .",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint": "pnpm run lint:script && pnpm run lint:style && pretty-quick --check --branch dev",
    "lint:fix": "pnpm run lint:script && pnpm run lint:style && pretty-quick --branch dev",
    "lint:script": "eslint . --ext .js,.ts,.jsx,.tsx,.vue",
    "lint:style": "stylelint 'packages/**/*.{css,scss,less,vue}'",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm -y"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "pnpm run lint:script"
    ],
    "*.{css,scss,less,vue}": [
      "pnpm run lint:style"
    ]
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "8.3.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-define-config": "1.2.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-html": "6.2.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-vue": "8.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "postcss": "^8.4.12",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "sass": "^1.45.2",
    "stylelint": "^14.6.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-property-sort-order-smacss": "^9.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.5.4"
  }
}
